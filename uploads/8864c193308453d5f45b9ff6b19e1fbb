
!
version 15.2
service timestamps debug datetime msec
service timestamps log datetime msec
!
hostname r3
!
boot-start-marker
boot-end-marker
!
!
!
no aaa new-model
no ip icmp rate-limit unreachable
ip cef
!
!
!
!
!
!
no ip domain lookup
ip domain name lab.local
no ipv6 cef
!
!
multilink bundle-name authenticated
!
!
!
!
!
!
!
!
!
ip tcp synwait-time 5
! 
!
!
!
!
!
!
!
!
!
!
!
interface Loopback0
 ip address 192.18.3.101 255.255.255.255
!
interface Ethernet0/0
 no ip address
 shutdown
 duplex auto
!
interface GigabitEthernet0/0
 ip address 192.18.1.6 255.255.255.252
 ip access-group BLOCK_R1_NETWORK2_IN in
 ip access-group BLOCK_R1_NETWORK2_OUT out
 media-type gbic
 speed 1000
 duplex full
 negotiation auto
!
interface GigabitEthernet1/0
 ip address 192.18.2.2 255.255.255.252
 ip access-group BLOCK_R1_NETWORK2_IN in
 ip access-group BLOCK_R1_NETWORK2_OUT out
 negotiation auto
!
!
router bgp 3
 bgp router-id 192.18.3.101
 bgp log-neighbor-changes
 !bgp bestpath as-path multipath-relax
 neighbor as1 peer-group
 neighbor as1 remote-as 1
 neighbor as2 peer-group
 neighbor as2 remote-as 2
 neighbor 192.18.1.5 peer-group as1
 neighbor 192.18.2.1 peer-group as2
 !
 address-family ipv4
  bgp dampening
  bgp additional-paths select all
  bgp additional-paths send receive
  !neighbor as3 next-hop-self
  neighbor as1 send-community both
  neighbor as2 send-community both
  neighbor 192.18.1.5 activate
  neighbor 192.18.2.1 activate
  !maximum-paths ibgp 4
  !maximum-paths eibgp 4
 exit-address-family
!
ip forward-protocol nd
!
!
!
no ip http server
no ip http secure-server
!
!
!
ip access-list extended BLOCK_R1_NETWORK2_IN
 deny   ip 160.0.0.0 31.255.255.255 any  ! src: 160.0.0.0/3; dst: any
 permit ip any any                       ! src: any;         dst: any
!
ip access-list extended BLOCK_R1_NETWORK2_OUT
 deny   ip any 160.0.0.0 31.255.255.255  ! src: any;         dst: 160.0.0.0/3
 permit ip any any                       ! src: any;         dst: any
!
!
!
control-plane
!
!
line con 0
 exec-timeout 0 0
 privilege level 15
 logging synchronous
 stopbits 1
line aux 0
 exec-timeout 0 0
 privilege level 15
 logging synchronous
 stopbits 1
line vty 0 4
 login
!
!
end
